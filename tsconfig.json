{
    "compilerOptions": {
      "lib": [
        "es2016",
        "dom"
      ],
      "alwaysStrict": true,
      "sourceMap": true,
      "module":"commonjs",
      "noImplicitAny": true,
      "allowJs": false,
      "strictNullChecks": true,
      "downlevelIteration": true,
      "removeComments": true,
      "noImplicitThis": true,
      "strict": true,
      "target": "es5"
    },
    "include": [
      "src/ts/"
    ],
    "rules": {
      "no-console": false,
      "interface-name": [
        true,
        "never"
      ]
    }
  }