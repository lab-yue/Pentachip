{
    "compilerOptions": {
      "module": "commonjs",
      "lib": [
        "es2015",
        "dom"
      ],
      "outDir": "dist/js/",
      "noImplicitAny": true,
      "allowJs": false,
      "downlevelIteration": true,
      "removeComments": true
    },
    "include": [
      "src",
    ],
    "rules": {
      "no-console": false,
      "interface-name": [
        true,
        "never"
      ]
    }
  }
  